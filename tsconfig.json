{
  "compilerOptions": {
    "module": "NodeNext",           // <-- Use NodeNext for ESM+CommonJS interop
    "moduleResolution": "nodenext", // <-- Important for packages like mongoose
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
